resource "aws_security_group" "tf_api_sg" {
  name        = "lanchonete-api-sg"
  vpc_id      = data.aws_vpc.tf_vpc.id

  ingress {
    from_port   = 8080
    to_port     = 8080
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
